@model IEnumerable<LockhoodApp.Models.WorkTask>
@{
    ViewBag.Title = "Home Page";
}


@{
    Layout = "~/Views/Shared/_LayoutKanban.cshtml";
}



<div class="card card-row card-primary">
    <div class="card-header">
        <h3 class="card-title">
            Pending
        </h3>
    </div>
    <div class="card-body">
        @foreach (var item in Model.Where(i => i.status == "Pending"))
        {
        <div class="card card-light card-outline">
            <div class="card-header">
                <h5 class="card-title">@item.Name</h5>
                <div class="card-tools">
                    <a href="#" class="btn btn-tool btn-link">#1</a>
                    <a href="#" class="btn btn-tool">
                        <i class="fas fa-pen"></i>
                    </a>
                </div>
            </div>
            <div class="card-body">
                <p>
                    @item.expectedDate
                </p>
            </div>
            <div class="card-body">
                <p>
                    @item.EmployeeTasks.FirstOrDefault().empName
                </p>
            </div>
        </div>
        }
    </div>
</div>
<div class="card card-row card-default">
    <div class="card-header bg-info">
        <h3 class="card-title">
            In Progress
        </h3>
    </div>
    <div class="card-body">
        @foreach (var item in Model.Where(i => i.status == "In Progress"))
        {
        <div class="card card-light card-outline">
            <div class="card-header">
                <h5 class="card-title">@item.Name</h5>
                <div class="card-tools">
                    <a href="#" class="btn btn-tool btn-link">#2</a>
                    <a href="#" class="btn btn-tool">
                        <i class="fas fa-pen"></i>
                    </a>
                </div>
            </div>
            <div class="card-body">
                <p>
                    @item.expectedDate
                </p>
            </div>
            <div class="card-body">
                <p>
                    @item.EmployeeTasks.FirstOrDefault().empName
                </p>
            </div>
        </div>
        }
    </div>
</div>
<div class="card card-row card-success">
    <div class="card-header">
        <h3 class="card-title">
            Complete
        </h3>
    </div>
    <div class="card-body">
        @foreach (var item in Model.Where(i => i.status == "Complete"))
        {
        <div class="card card-light card-outline">
            <div class="card-header">
                <h5 class="card-title">@item.Name</h5>
                <div class="card-tools">
                    <a href="#" class="btn btn-tool btn-link">#3</a>
                    <a href="#" class="btn btn-tool">
                        <i class="fas fa-pen"></i>
                    </a>
                </div>
            </div>
            <div class="card-body">
                <p>
                    @item.expectedDate
                </p>
            </div>
            <div class="card-body">
                <p>
                    @item.EmployeeTasks.FirstOrDefault().empName
                </p>
            </div>
        </div>
        }
    </div>
</div>


